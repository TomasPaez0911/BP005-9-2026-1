#include <stdio.h>

int main() {
    double num1, num2, suma;

    // Solicitar entrada al usuario
    printf("Ingrese el primer numero: ");
    scanf("%lf", &num1); // %lf es para double en scanf

    printf("Ingrese el segundo numero: ");
    scanf("%lf", &num2);

    // Sumar los numeros
    suma = num1 + num2;

    // Mostrar el resultado
    printf("La suma de %.2lf y %.2lf es: %.2lf\n", num1, num2, suma); // %.2lf limita a 2 decimales

    return 0;
}
