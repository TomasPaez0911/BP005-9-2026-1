#include <stdio.h>

int main() {
    float num1, num2, suma;

    // Solicitar al usuario que ingrese los n√∫meros
    printf("Ingrese el primer numero float: ");
    scanf("%f", &num1);
    printf("Ingrese el segundo numero float: ");
    scanf("%f", &num2);

    // Realizar la suma
    suma = num1 + num2;

    // Mostrar el resultado con dos decimales
    printf("La suma de %.2f + %.2f es: %.2f\n", num1, num2, suma);

    return 0;
}
